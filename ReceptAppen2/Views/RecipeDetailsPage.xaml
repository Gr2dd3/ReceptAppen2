<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ReceptAppen2.Views.RecipeDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:ReceptAppen2.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodel:RecipeDetailsViewModel">
        <ScrollView>
    <VerticalStackLayout>


            
        <Grid RowDefinitions="400, Auto , Auto, Auto, Auto" RowSpacing="20"
              ColumnDefinitions="Auto, Auto">
            <!--  BILD  -->
            <Image
                Grid.Row="1"
                Grid.Column="1"
                HeightRequest="400"
                HorizontalOptions="Center"
                Source="{Binding ImageUrl}" />

            <ListView ItemsSource="{Binding Ingredientgroups}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="FormattedString">
                        <ViewCell>

                            <Label
                Grid.Row="2"
                                Grid.Column="1"
                VerticalOptions="End"
                Text="{Binding .}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <!--  INGREDIENTS  -->
            <ListView ItemsSource="{Binding Ingredients}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="FormattedString">
                        <ViewCell>

                            <Label
                Grid.Row="3"
                HorizontalOptions="Center"
                Text="{Binding .}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
    </VerticalStackLayout>
        </ScrollView>
</ContentPage>