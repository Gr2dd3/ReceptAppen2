<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ReceptAppen2.Views.RecipeDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:ReceptAppen2.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodel:RecipeDetailsViewModel">
    <ScrollView>

        <VerticalStackLayout>

            <Grid
                ColumnDefinitions="Auto, Auto"
                ColumnSpacing="20"
                RowDefinitions="Auto, Auto , Auto, Auto, Auto"
                RowSpacing="20">

                <Label Text="{Binding CookingTime}" />
                <HorizontalStackLayout Spacing="10">
                    <!--  BILD  -->
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        HeightRequest="400"
                        HorizontalOptions="Start"
                        Source="{Binding ImageUrl}"
                        WidthRequest="400" />

                    <ListView
                        Grid.Row="0"
                        Grid.Column="1"
                        ItemsSource="{Binding Ingredientgroups}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodel:RecipeDetailsViewModel">
                                <ViewCell>
                                    <Label
                                        HorizontalOptions="Start"
                                        Text="{Binding .}"
                                        VerticalOptions="Start" />
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!--  INGREDIENTS  -->
                    <ListView
                        Grid.Row="0"
                        Grid.Column="2"
                        ItemsSource="{Binding Ingredients}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="viewmodel:RecipeDetailsViewModel">
                                <ViewCell>
                                    <Label Text="{Binding .}" VerticalOptions="Center" />
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </HorizontalStackLayout>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>